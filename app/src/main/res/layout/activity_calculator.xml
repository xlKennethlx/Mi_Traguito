<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kenneth.mi_traguito.Calculator"
    android:background="@drawable/book"
    android:theme="@style/AppTheme">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="@string/horas"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="28dp"
        android:textColorHint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="175dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="@string/cantidad"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="25dp"
        android:textColorHint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="175dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="@string/Onzas_Liquidas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="175dp">
        <requestFocus />
    </EditText>


    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="@string/porciento"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textColorHint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="175dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/editText2"
        android:hint="@string/peso"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:textColorHint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="175dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_height="65dp"
        android:hint="@string/resultado"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:textColorHint="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        android:text="@string/calcular"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="eventoCalcular"
        android:layout_width="150dp"
        android:background="#8b5324"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <Button
        android:id="@+id/btn_hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/textView"
        android:text="@string/button_send"
        android:onClick="sendMessage"/>

</RelativeLayout>
